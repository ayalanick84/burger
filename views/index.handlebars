<div id="page">



  <div class="container">
    <div class="row">
      <div class="col-sm-4">

        <ul>

          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-4">
        <h3>Eat-Da-Burger!</h3>
        <img src="https://d1nhio0ox7pgb.cloudfront.net/_img/g_collection_png/standard/512x512/hamburger.png"
          alt="Animated hamburger">
        <form class="create-form">
          <div class="form-group">
            <label for="ca"></label>
            <input type="text" id="ca" name="name">
          </div>
          <button type="submit" class="btn btn-success">Add Burger</button>
      </form>
      </div>
      <div class="col-4">
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>

      </div>
    </div>
  </div>
</div>